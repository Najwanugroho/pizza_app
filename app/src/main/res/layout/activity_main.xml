<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button android:id="@+id/btnQr"
        android:text="Scan Qr/Barcode"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <EditText android:id="@+id/etName"
        android:hint="Nama Pizza"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <EditText android:id="@+id/etPrice"
        android:hint="Harga"
        android:inputType="numberDecimal"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <Button android:id="@+id/btnAdd"
        android:text="Tambah / Update"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <ListView android:id="@+id/pizzaList"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_marginTop="16dp"/>
</LinearLayout>
